{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "E:/mingw64/bin/g++.exe",
			"args": [
				"-finput-charset=UTF-8",
                "-fexec-charset=gbk",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-lgdi32",
				"-lopengl32",
				"-lglfw3",
				"-lfreeglut",
				"-lsfml-audio",
                "-lsfml-graphics",
                "-lsfml-network",
                "-lsfml-system",
                "-lsfml-window",
				"-lglew32"
			],
			"options": {
				"cwd": "E:/mingw64/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译器: E:/mingw64/bin/g++.exe"
		},
	]
}